<%= form_for :post ,:url => {:action => 'create'} do  |post| %>

  <p>
    <%= post.label :content, "Your Content:" %>
    <%= post.text_area :content %>
  </p>
  	<%= post.label :Picture %>
    <%= post.file_field :img, autofocus: true %>
  <p class='buttons'>
    <%= post.submit "Go" %>
  </p>

<% end %>
